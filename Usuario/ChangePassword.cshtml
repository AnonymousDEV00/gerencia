@model GerenciaVendas.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

<style>
    .toggle-password {
        cursor: pointer;
        position: absolute;
        right: 10px;
        top: 10px;
        font-size: 20px;
    }
</style>

<h2>@ViewData["Title"]</h2>

<form asp-action="ChangePassword" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="SenhaAtual" class="control-label">Senha Atual</label>
        <input asp-for="SenhaAtual" class="form-control" type="password" />
        <span onclick="togglePasswordVisibility('SenhaAtual')" class="toggle-password">
            <i class="fas fa-eye" id="toggleSenhaAtual"></i>
        </span>
        <span asp-validation-for="SenhaAtual" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NovaSenha" class="control-label">Nova Senha</label>
        <input asp-for="NovaSenha" class="form-control" type="password" />
        <span onclick="togglePasswordVisibility('NovaSenha')" class="toggle-password">
            <i class="fas fa-eye" id="toggleNovaSenha"></i>
        </span>
        <span asp-validation-for="NovaSenha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Alterar Senha" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePasswordVisibility(fieldId) {
            var passwordField = document.getElementById(fieldId);
            var toggleIcon = document.getElementById('toggle' + fieldId);
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }
    </script>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

